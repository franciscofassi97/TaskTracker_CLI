{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./domain/*"],
      "@application/*": ["./application/*"],
      "@infrastructure/*": ["./infrastructure/*"],
      "@interfaces/*": ["./interfaces/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}